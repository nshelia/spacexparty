{
    "env": {
        "node": true,
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-redux/recommended"
    ],
    "settings": {
        "react": { 
            "pragma": "React",
            "version": "16.4.2"
        }
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-redux",
        "simple-import-sort"
    ],
    "rules": {
        "init-declarations": "error",
        "jsx-quotes": [
            "error",
            "prefer-double"
        ],
        "react/jsx-filename-extension": "off",
        "key-spacing": "error",
        "keyword-spacing": [
            "error",
            {
                "after": true,
                "before": true
            }
        ],
        "react/jsx-pascal-case": "off",
        "react/jsx-props-no-spreading": "off",
        "react/require-default-props": "off",
        "react/forbid-component-props": ["warn", { "forbid": [] }],
        "react/jsx-max-depth": ["warn", { "max": 6 }],
        "line-comment-position": "error",
        "react/prop-types": "off"
    }
}
